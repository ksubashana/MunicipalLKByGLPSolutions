                        {
                            <img src="@GetDocumentPreviewUrl(PreviewDocument.DocumentId)" class="img-fluid" alt="@PreviewDocument.FileName" />
                        }
                        else if (IsPdfFile(PreviewDocument.FileExtension))
                        {
                            <iframe src="@GetDocumentPreviewUrl(PreviewDocument.DocumentId)" width="100%" height="500px"></iframe>
                        }
                        else
                        {
                            <div class="text-center p-4">
                                <i class="fas fa-file fa-3x text-muted mb-3"></i>
