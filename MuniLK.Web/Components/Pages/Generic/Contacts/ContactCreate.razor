                <ValidationMessage For="@(() => NewContact.NIC)" />
            </div>
            <div class="col-md-6">
                <SfTextBox @bind-Value="NewContact.Email"
                           Placeholder="@($"{localizer["Email"]} (විද්‍යුත් තැපෑල)")"
                           FloatLabelType="FloatLabelType.Auto" />
                <ValidationMessage For="@(() => NewContact.Email)" />
            </div>
            <div class="col-md-6">
                <SfTextBox @bind-Value="NewContact.PhoneNumber"
                           Placeholder="@($"{localizer["PhoneNumber"]} (දුරකථන අංකය)")"
